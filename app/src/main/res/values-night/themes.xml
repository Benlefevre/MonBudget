<resources>
    <!-- Base application theme. -->
    <style name="Theme.MonBudget" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantNight</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondaryNight</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariantNight</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimaryVariantNight</item>
        <item name="android:navigationBarColor">@color/colorPrimaryVariantNight</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="AuthTheme" parent="@style/Theme.MaterialComponents.NoActionBar">
        <!-- Required for sign-in flow styling -->
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantNight</item>
        <item name="colorSecondary">@color/colorSecondaryNight</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/colorPrimaryVariantNight</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:statusBarColor">@color/colorBackground</item>
    </style>

    <style name="FirebaseUI.Text.Link">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>